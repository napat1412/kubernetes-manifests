[Unit]
Description=Overwrite kubernetes manifests & install CNI. This service read kubernetes-worker.env and certificate in /etc/kubernetes/ssl

[Service]
Type=oneshot
ExecStartPre=/usr/bin/mkdir -p /opt/bin
ExecStartPre=/usr/bin/mkdir -p /etc/kubernetes/manifests
ExecStartPre=/usr/bin/mkdir -p /etc/kubernetes/cni/net.d

ExecStartPre=/usr/bin/echo "Download dependency file by using curl"
ExecStartPre=/usr/bin/curl -s -o /opt/bin/kubelet-wrapper https://raw.githubusercontent.com/napat1412/kubernetes-manifests/v1.6.6/bin/kubelet-wrapper
ExecStartPre=/usr/bin/chmod +x /opt/bin/kubelet-wrapper
ExecStartPre=/usr/bin/curl -s -o /opt/bin/sed.sh https://raw.githubusercontent.com/napat1412/kubernetes-manifests/v1.6.6/bin/sed.sh
ExecStartPre=/usr/bin/chmod +x /opt/bin/sed.sh

ExecStartPre=/usr/bin/curl -s -o /etc/kubernetes/cni/docker_opts_cni.env https://raw.githubusercontent.com/napat1412/kubernetes-manifests/v1.6.6/deploy-worker/kubernetes/cni/docker_opts_cni.env
ExecStartPre=/usr/bin/curl -s -o /etc/kubernetes/cni/net.d/10-flannel.conf https://raw.githubusercontent.com/napat1412/kubernetes-manifests/v1.6.6/deploy-worker/kubernetes/cni/net.d/10-flannel.conf

ExecStartPre=/usr/bin/curl -s -o /etc/kubernetes/worker-kubeconfig.yaml https://raw.githubusercontent.com/napat1412/kubernetes-manifests/v1.6.6/deploy-worker/kubernetes/worker-kubeconfig.yaml
ExecStartPre=/usr/bin/curl -s -o /etc/kubernetes/manifests/kube-proxy.yaml https://raw.githubusercontent.com/napat1412/kubernetes-manifests/v1.6.6/deploy-worker/kubernetes/manifests/kube-proxy.yaml

EnvironmentFile=/etc/kubernetes/kubernetes-worker.env
ExecStartPre=/opt/bin/sed.sh KUBELET_IMAGE_TAG ${KUBELET_IMAGE_TAG} /etc/kubernetes/manifests/kube-proxy.yaml
ExecStartPre=/opt/bin/sed.sh APISERVER_ENDPOINT ${APISERVER_ENDPOINT} /etc/kubernetes/manifests/kube-proxy.yaml

ExecStartPre=/usr/bin/mkdir -p /opt/cni/bin
ExecStartPre=/usr/bin/curl -sL -o /opt/cni/cni-v0.4.0.tgz https://github.com/containernetworking/cni/releases/download/v0.4.0/cni-amd64-v0.4.0.tgz
ExecStart=/usr/bin/tar -xzvf /opt/cni/cni-v0.4.0.tgz -C /opt/cni/bin
TimeoutSec=30min
